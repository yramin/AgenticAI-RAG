# OpenAI/OpenRouter Configuration
# For OpenAI: Leave OPENAI_BASE_URL empty or unset
# For OpenRouter: Set OPENAI_BASE_URL to https://openrouter.ai/api/v1
OPENAI_API_KEY=your_openai_or_openrouter_api_key_here
OPENAI_BASE_URL=https://openrouter.ai/api/v1
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# OpenRouter Optional Headers (recommended)
# HTTP_REFERER=https://your-app-url.com
# X_TITLE=Your App Name

# ChromaDB Configuration
CHROMA_DB_PATH=./data/chroma_db
CHROMA_COLLECTION_NAME=documents

# MCP Server Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8001

# Memory Configuration
SHORT_TERM_MEMORY_SIZE=10
LONG_TERM_MEMORY_ENABLED=true
MAX_CONTEXT_TOKENS=4000

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false

# Web Search (Optional - choose one)
# Only needed if you want web search functionality
TAVILY_API_KEY=your_tavily_api_key_here
# SERPER_API_KEY=your_serper_api_key_here

# Database Configuration (Optional)
# Only needed if you want database query tool functionality
DATABASE_URL=sqlite:///./data/app.db
# DATABASE_URL=postgresql://user:password@localhost/dbname

# Cloud Storage (Optional - only needed for CloudAgent in Advanced tier)
# The system works fine without these - only configure if you need cloud storage access
# AWS Configuration
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your_bucket_name

# GCS Configuration
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
# GCS_BUCKET_NAME=your_bucket_name

# Logging
LOG_LEVEL=INFO

# Snowflake Configuration (Optional - only needed for SnowflakeAgent)
# The system works fine without this - only configure if you need Snowflake data warehouse access
SNOWFLAKE_ACCOUNT=your_account_identifier
SNOWFLAKE_USER=your_username
SNOWFLAKE_PASSWORD=your_password
SNOWFLAKE_WAREHOUSE=COMPUTE_WH
SNOWFLAKE_DATABASE=your_database
SNOWFLAKE_SCHEMA=PUBLIC
SNOWFLAKE_ROLE=ACCOUNTADMIN
